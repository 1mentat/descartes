.header
  %h1 Metrics
.well
  %a{ :class => "metrics_graph btn closed", :"data-toggle" => "collapse", :"data-target" => "#metrics_graph_form", :href => "#" } Add to Graph
  .tools.btn-group
    %button{ :class => "tools btn refresh", :title => "refresh metrics" }
      %i.icon-refresh
  .interval.btn-group
    %button{ :class => "interval btn disabled" } Interval
    %button{ :class => "interval btn active", :name => 1, :value => '1h' } 1h
    %button{ :class => "interval btn", :name => 2, :value => '3h' } 3h
    %button{ :class => "interval btn", :name => 3, :value => '6h' } 6h
    %button{ :class => "interval btn", :name => 4, :value => '24h' } 24h
.accordion-group
  / Form for adding metrics to an existing (or new) graph
  %fieldset#metrics_graph_form{ :class => "collapse" }
    #metrics_graph_select
      %ul
        %li
          %select{ :id => "metircs_graph_select", :name => "metrics_graph_select" }
        %li
          %button{ :class => "metrics_graph_submit btn btn-primary" } Save Graph
.metrics
%script{ :type => "text/javascript", :src => "/js/list-metrics.js" }
%script{ :type => "text/javascript", :src => "/js/render-common.js" }
