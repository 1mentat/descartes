.header
  %h1.locked= graph[:name]
  /%span.info Created by <span class="owner">#{graph[:owner]}</span> on #{graph[:created_at]}
.well
  %a{ :class => "details btn closed", :"data-toggle" => "collapse", :"data-target" => "#details", :href => "#" } Details
  .tools.btn-group
    %button{ :class => "tools btn fullscreen", :title => "toggle fullscreen" }
      %i.icon-fullscreen
    %button{ :class => "tools btn refresh", :title => "refresh graphs" }
      %i.icon-refresh
  .interval.btn-group
    %button{ :class => "interval btn disabled" } Interval
    %button{ :class => "interval btn active", :name => 1, :value => '1h' } 1h
    %button{ :class => "interval btn", :name => 2, :value => '3h' } 3h
    %button{ :class => "interval btn", :name => 3, :value => '6h' } 6h
    %button{ :class => "interval btn", :name => 4, :value => '24h' } 24h
.accordion-group
  %fieldset#details{ :class => "collapse" }
    .description.span6
      %label{ :for => "description" } Description:
      %span{ :class => "closed", :id => "description" }
.graphs
  .row
%script{ :type => "text/javascript", :src => "/js/profile-graph.js" }
%script{ :type => "text/javascript", :src => "/js/render-common.js" }
